# ListNest Backend Environment Configuration
# Copy this file to .env and update values for your environment

# Application
APP_NAME=ListNest Price Comparison API
APP_VERSION=1.0.0
DEBUG=false

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["https://listnest.co.il","https://www.listnest.co.il"]

# Database
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql+asyncpg://listnest:${DB_PASSWORD}@db:5432/listnest
DATABASE_SYNC_URL=postgresql://listnest:${DB_PASSWORD}@db:5432/listnest

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Scraper
SCRAPER_DATA_DIR=/tmp/supermarket_data
SCRAPER_ENABLED_CHAINS=["shufersal","rami_levy","victory","yeinot_bitan","mega","hatzi_hinam","tiv_taam","osher_ad","yohananof"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
